@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
<link href="~/Content/login.css" rel="stylesheet" />
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
        <h1 class="text-center login-title">Sign in MACD <b>Trade</b></h1>
        <div class="account-wall">
            <img class="profile-img" src="~/Images/user.png" alt="user">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin", id = "form-login", novalidate= "novalidate" }))
            {
                <input type="text" id="username" name="username" class="form-control" placeholder="Email" required autofocus>
                <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>

                <div class="div-error">@TempData["ErrMsg"]</div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    Sign in
                </button>
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#form-login').on('submit', function (e) {
            var errMsg = '';
            if ($('#username').val() == '') {
                errMsg = 'Username is required.'
            }
            else if ($('#password').val() == '')
            {
                errMsg = 'Password is required.'
            }

            if (errMsg != '')
            {
                $('.div-error').html(errMsg);
                e.preventDefault();
                return false;
            }
        })
    })
</script>